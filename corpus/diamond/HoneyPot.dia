contract HoneyPot {
  state {
    balances: [Address: Nat];
  }

  payable put() {
    state.balances[environment.sender] = state.balances[environment.sender] + environment.amountSent;
  }

  payable get() {
    send state.balances[environment.sender] to environment.sender;
    state.balances[environment.sender] = 0;
  }
}
